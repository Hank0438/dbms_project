<% include ./header %>
 <!-- Page Header -->
 <!-- Set your background image for this header on the line below. -->
 <header class="intro-header" style="background-image: url('/images/customers.jpg')">
     <div class="container">
         <div class="row">
             <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                 <div class="site-heading">
                     <h1>Search Material</h1>
                 </div>
             </div>
         </div>
     </div>
 </header>





 <!-- Main Content -->
 <div class="container">
     <div class="row">
         <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
         <div class="dropdown">

         <form role="form">
           <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
             <label>Search</label>
           <span class="caret"></span></button>
          <ul class="dropdown-menu">
          <li><a href="#">name</a></li>
           <li><a href="#">quantity</a></li>
           <li><a href="#">price</a></li>
           <li><a href="#">added by</a></li>
            </ul>
            <div class="form-group col-lg-10 input-group">
             <input type="text" class="form-control">
             <span class="input-group-btn"><button class="btn-sm btn-default" type="button"><i class="fa fa-search"></i></button></span>
         </div>
     </form>
     </div>
   </div>
 </div>
</div>


<div class="container">
<div class="col-lg-12">
    <h2>Material</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Added By</th>
              </tr>
            </thead>

            <tbody>
              <% materialList.forEach(function(material) { %>
                <tr>
                    <td> <a href="/material/<%= material.material_ID %>">
                      <%= material.parts_name %></a></td>
                    <td> <a href="/material/<%= material.material_ID %>">
                      <%= material.inventory_quantity %></a></td>
                    <td> <a href="/material/<%= material.material_ID %>">
                      <%= material.material_price %></a></td>
                      <td> <a href="/material/<%= material.material_ID %>">
                       <%= material.member.name %></a></td>
                </tr>
                <%  }); %>
            </tbody>
        </table>
    </div>
  </div>
</div>





 <% include ./footer %>
